const express = require("express");
const mysql = require("mysql");
const cors = require("cors");

const con = mysql.createConnection({
    user: 'root',
    host: 'localhost',
    database:'transportadora'
});

con.connect((err) => {
    if(err) {
        console.error('Erro ao conectar ao banco de dados', err);
        return;
    }
    console.log('Conectado ao banco de dados.');
});

const teste = (req, res) => {
    res.send("Back-end respondendo");
}

// CRUD - Create entrega
const createentrega = (req, res) => {
    const {placa, motorista, inicio, fim, status} =req.body;

    const query = 'INSERT INTO entrega (placa, motorista, inicio, fim, status) VALUES(?, ?, ?, ?, ?)';
    con.query(query, [placa, motorista, inicio, fim, status], (err,result) => {
        if(err) {
            res.status(500).json({error: err.message});
        } else {
            res.status(201).json({message: 'entrega criado com sucesso', result});
        }

    });
}

//CRUD - Read entregas
const readentrega = (req, res) => {
    con.query("SELECT * FROM entrega",(err,result) => {
        if(err) {
            res.status(500).json({error: err.message});
        } else {
            res.json(result);
        }
    });
}

// CRUD - Update entrega
const updateentrega = (req, res) => {
    const {placa, motorista, inicio, fim, status} = req.body;

    const query = 'UPDATE entrega SET placa = ?, motorista = ?, inicio = ?, fim = ?, status = ? WHERE endereco= ?'
    con.query(query, [placa, motorista, inicio, fim, status],(err, result)=>{
        if(err) {
            res.status(500).json({error: err.message});
        }else {
            res.json({message:'entrega atualizada com sucesso', result});
        }
    });
}


//CRUD - Delete Veiculo
const deleteentrega = (req, res) => {
    const {placa, motorista, inicio, fim, status} = req.params;

    const query = 'DELETE FROM entrega WHERE placa = ?';
    con.query(query, [placa, motorista, inicio, fim, status], (err,result)=> {
        if(err) {
            res.status(500).json({error:err.message});
        }else {
            res.json({message: 'entrega removida com sucesso', result});
        }
    });
}

//Saida Front
const app = express();
app.use(express.json());
app.use(cors());
app.get("/", teste);

//entregas para Veiculo
app.post("/entrega",createentrega);
app.get("/entrega", readentrega);
app.put("/entrega", updateentrega);
app.delete("/entrega/:endereco", deleteentrega);


//Teste de porta
app.listen(3333, () => {
    console.log("Servidor rodando na porta 3000");
});
